                                                <span class="text-muted">Issue: <small><a
                                                            href="{{claim.issueUrl}}">{{claim.issueUrl}}</a></small></span>
                                                <br />

                                                <span class="text-muted">Pull Request: <small><a
                                                            href="{{claim.pullUrl}}">{{claim.pullUrl}}</a></small></span>
                                                <br />
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                    </div>
                    <br />
                    {{/each}}
                </div>
                {{/if}}
                {{#if conflicts.pulls}}
